                    <MudPaper Height="250px" Style="background-color: wheat">
                        <MudGrid>
                            <MudItem>
                                <MudPaper Width="120px" Style="background-color: lightcoral" Class="align-self-center">@(_swimlaneTitles [columnIndex])</MudPaper>
                            </MudItem>

